# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=demo
KEYCLOAK_CLIENT_ID=demo-client
KEYCLOAK_CLIENT_SECRET=your-client-secret
SESSION_SECRET=your-session-secret

# OPA Configuration
OPA_URL=http://localhost:8181
OPA_POLICY_PATH=/v1/data/zerotrust/authz

# JWT Configuration
JWT_SECRET=your-jwt-secret
JWT_ISSUER=http://localhost:8080/realms/demo
JWT_AUDIENCE=demo-client

# Frontend Configuration
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080
NEXT_PUBLIC_KEYCLOAK_REALM=demo
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=demo-client
NEXT_PUBLIC_OPA_ENABLED=true

# Database Configuration
DATABASE_URL=postgresql://admin:admin@localhost:5432/zerotrust

# Risk Assessment
RISK_ASSESSMENT_ENABLED=true
MAX_RISK_SCORE=100
HIGH_RISK_THRESHOLD=70

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_LEVEL=info

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# Performance
OPA_CACHE_TTL=300
AUTHORIZATION_TIMEOUT=5000 